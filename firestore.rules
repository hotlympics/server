rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // Users collection - users can only read/write their own documents
    match /users/{userId} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }

    // Reports collection - all operations handled server-side only
    match /reports/{reportId} {
      allow read, write: if false; // All operations handled server-side with admin privileges
    }

    // Image-data collection - read access for rating, admin-only write access for reportCount
    match /image-data/{imageId} {
      allow read: if request.auth != null;
      allow write: if false; // All writes handled server-side with admin privileges
    }
  }
}