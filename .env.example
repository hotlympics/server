# Server Configuration
PORT=3000
NODE_ENV=development

# CORS Configuration
# Add all your allowed origins separated by commas
# For production, include your Firebase hosting domains
# Example: http://localhost:5173,https://your-project.web.app,https://your-project.firebaseapp.com
CORS_ORIGINS=http://localhost:5173,http://localhost:3000,https://your-project.web.app,https://your-project.firebaseapp.com,https://yourdomain.com

# JWT Configuration
JWT_SECRET=your-super-secure-jwt-secret-here

# Google OAuth Configuration
GOOGLE_CLIENT_ID=your-google-client-id.apps.googleusercontent.com
GOOGLE_CLIENT_SECRET=your-google-client-secret
# For production, update to: https://YOUR-FIREBASE-PROJECT-ID.web.app/auth/google/callback
GOOGLE_REDIRECT_URI=https://your-project.web.app/auth/google/callback

# Google Cloud Configuration
GCP_PROJECT_ID=your_gcp_project_id_here
GOOGLE_CLOUD_PROJECT=your_gcp_project_id_here
FIRESTORE_DATABASE_ID=your_database_id_here
FIREBASE_STORAGE_BUCKET=your-project-id.appspot.com

# Firebase Service Account JSON file path for local development
FIREBASE_SERVICE_ACCOUNT=./your-service-account.json

# Frontend URL
FRONTEND_URL=http://localhost:5173

# Admin Dashboard Configuration
ADMIN_USERNAME=admin
ADMIN_PASSWORD=change-this-secure-password-123
ADMIN_JWT_SECRET=super-secret-admin-jwt-key-change-in-production

# Scheduler Configuration
# API key for automated scheduler access (generate with: openssl rand -hex 32)
SCHEDULER_API_KEY=generate-a-64-character-hex-key-with-openssl-rand-hex-32